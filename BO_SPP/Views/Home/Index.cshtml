@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 mb-3">
        <div class="d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Selamat datang @HttpContextAccessor.HttpContext.Session.GetString("fn") di Aplikasi Back Office SPP PTSMI</h5>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="card car-transparent">
            <div class="card-body p-0">
                <div class="profile-image position-relative">
                    <img src="../image/Banner3.jpg" class="img-fluid rounded w-100" alt="">
                </div>
                <div class="profile-overly">
                    <h3 id="span_Fullname_2">@HttpContextAccessor.HttpContext.Session.GetString("fn")</h3>
                    <span id="span_Unit"></span>
                </div>
            </div>
        </div>
    </div>

    
    
    

</div>