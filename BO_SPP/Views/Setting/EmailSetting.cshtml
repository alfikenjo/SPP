@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="@Url.Content("~/Scripts/Pages/EmailSetting.js")"></script>

    <script>
        function SetRole() {
            let Role = '@ViewBag.Role';
            sessionStorage.setItem("Role", Role);
        }
    </script>
}

<style>
    .centered-title {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .centered-subtitle {
        position: absolute;
        top: 44%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

<div class="row">
    <div class="col-lg-12 mb-3">
        <div class="d-flex align-items-center justify-content-between">
            <div class="navbar-breadcrumb">
                <h5 class="mb-0">Daftar Template Email</h5>
                <small>Administrator Setting</small>
            </div>           
        </div>
    </div>

    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="LoaderOnGrid">
                    <div class="overlay ModalLoader">
                        <i class="fas fa-2x fa-spinner fa-spin" style="font-size:48px;color:red"></i>
                    </div>
                </div>
                <table class="table table-bordered" id="TableData" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>Tipe</th>
                            <th>Subject</th>
                            <th>Status</th>
                            <th>UpdatedOn</th>
                            <th>UpdatedBy</th>
                        </tr>
                    </thead>
                </table>

            </div>
        </div>

        <form id="FormInput">
            <input type="hidden" class="form-control text-sm" id="Action">
            <input type="hidden" class="form-control text-sm" id="ID">

            <div id="divInput" class="card" style="display: none">
                <div class="card-body">
                    <div class="form-group">
                        <label>Tipe</label>
                        <input type="text" readonly id="Tipe" name="Tipe" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Subject *)</label>
                        <input type="text" id="Subject" name="Subject" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Anda perlu menyisipkan semua parameter dibawah ini pada template body mail</label>                        
                        <small class="ENLabel">Contoh: Kepada Yth, [Fullname]</small>
                        <div id="div_parameter" >

                        </div>
                    </div>
                    <div class="form-group">
                        <textarea id="Konten" name="Konten" class="ContentHMTL"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <select id="Status" name="Status" class="form-control">
                            <option value="Aktif">Aktif</option>
                            <option value="Non Aktif">Non Aktif</option>
                        </select>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" id="btnSave" class="btn btn-success btn-sm"><i class="fa fa-spinner fa-spin button-spinner"></i>Save</button>
                    <button id="btnCloseForm" onclick="CloseForm(); return false;" class="btn bg-danger btn-sm">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>