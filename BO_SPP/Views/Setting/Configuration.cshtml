@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="@Url.Content("~/Scripts/Pages/Configuration.js")"></script>
}

<style>
    form {
        display: flex !important;
    }
</style>


<div class="row">
    <form id="FormInput" name="FormInput" class="col-12">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">OTP Configuration</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="acc-edit">

                        <div class="form-group"><label for="Request_OTP">Request concurrent time (in seconds)</label>
                            <input type="number" class="form-control" id="Request_OTP" name="Request_OTP"></div>
                        <div class="form-group"><label for="Submit_OTP">Three attempt hold time (in minutes)</label>
                            <input type="number" class="form-control" id="Submit_OTP" name="Submit_OTP"></div>

                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <button id="btnSaveDC" type="submit" form="FormInput" class="btn btn-primary mr-2"><i class="fa fa-spinner fa-spin button-spinner"></i><i class="fa fa-save"></i>&nbsp;Save</button>
                       <small id="UpdatedOn" class="float-right"></small>
                    </div>
                </div>
            </div>
        </div>
        
    </form>
</div>
